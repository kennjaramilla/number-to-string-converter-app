{
  "name": "number-to-string-converter-app",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "node:size": "cross-env node --max-old-space-size=16384",
    "node:ng": "npm run node:size node_modules/@angular/cli/bin/ng",
    "prettier": "prettier --write \"src/**/*.{scss,ts,json,html}\"",
    "watch": "ng build --watch --configuration development",
    "test": "npm run node:ng test",
    "test:no-watch": "ng test --browsers ChromeHeadless --no-watch --code-coverage",
    "test:visual": "ng test:ng -- -- -- --browsers=Chrome --watch",
    "lint": "eslint . --ext .ts --fix"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.0",
    "@angular/common": "^14.2.0",
    "@angular/compiler": "^14.2.0",
    "@angular/core": "^14.2.0",
    "@angular/forms": "^14.2.0",
    "@angular/platform-browser": "^14.2.0",
    "@angular/platform-browser-dynamic": "^14.2.0",
    "@angular/router": "^14.2.0",
    "@ngxs/store": "^3.8.1",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.12",
    "@angular/cli": "~14.2.12",
    "@angular/compiler-cli": "^14.2.0",
    "@types/jasmine": "~4.0.0",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^46.4.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "~4.7.2"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "printWidth": 160,
    "semi": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "arrowParens": "always",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "parser": "json",
          "singleQuote": false
        }
      },
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  }
}
